{% extends "/frontoffice/base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="container pt-4">
        <div class="row mt-4">
            <h1 class="fs-5 text-center fw-normal">Inscrivez-vous sur notre  site pour pouvoir commenter les articles et participer à la vie du blog!</h1>
        </div>
        <div class="row mt-4">
            <div class="col">
                {% for flash in flashes.error %}
                    <h2 class="fs-5 text-danger text-center">{{ flash }}</h2>
                {% endfor %}
                {% for flash in flashes.success %}
                    <h2 class="fs-5 text-success text-center">{{ flash }}</h2>
                {% endfor %}
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12">
                <div class="container">
                    <form action='' method="POST" class="mb-3 form-group">
                        <div class="row">
                            <div class="col-9 offset-1 col-sm-8 offset-sm-2 offset-lg-1 col-lg-3 my-2">
                                <label for="name" class="form-label">Votre nom:</label>
                                <input type="text" id="name" name="name" class="form-control" required value="{{ inputs.name }}">
                            </div>
                            <div class="col-9 offset-1 col-sm-8 offset-sm-2 offset-lg-1 col-lg-3 my-2">
                                <label for="firstname" class="form-label">Votre prénom:</label>
                                <input type="text" id="firstname" name="firstname" class="form-control" required value="{{ inputs.firstname }}">
                            </div>
                        <div class="row">
                            <div class="col-10 offset-1 col-lg-3 my-2">
                                <label for="email" class="form-label">Votre Email:</label>
                                <input type="email" id="email" name="email" pattern="[A-Za-z0-9](([_\.\-]?[a-zA-Z0-9]+)*)@([A-Za-z0-9]+)(([_\.\-]?[a-zA-Z0-9]+)*)\.([A-Za-z]{2,})" class="form-control" required value="{{ inputs.email }}">
                            </div>
                            <div class="col-10 offset-1 col-lg-3 my-2">
                                <label for="emailConfirm" class="form-label">Confirmer votre Email:</label>
                                <input type="email" id="emailConfirm" name="emailConfirm" pattern="[A-Za-z0-9](([_\.\-]?[a-zA-Z0-9]+)*)@([A-Za-z0-9]+)(([_\.\-]?[a-zA-Z0-9]+)*)\.([A-Za-z]{2,})" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-10 offset-1 col-lg-3 my-2">
                                <label for="password" class="form-label">Votre mot de passe:</label>
                                <input type="password" id="password" name="password" pattern="(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^<>&*-]).{8,}" class="form-control" required>
                            </div>
                            <div class="col-10 offset-1 col-lg-3 my-2">
                                <label for="passwordConfirm" class="form-label">Confirmer votre mot de passe:</label>
                                <input type="password" id="passwordConfirm" name="passwordConfirm" pattern="(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^<>&*-]).{8,}" class="form-control" required>
                            </div>
                            <div>
                                <input id="token" name="token" type="hidden" value="{{ session.token }}" />
                            </div>
                        </div>
                        <div class="row d-flex justify-content-sm-center-center">
                            <div class="col-10 offset-1 col-sm-3 my-2">
                                <input type="submit" value="S'inscrire" class="btn btn-primary form-control" required>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}