{% extends "/frontoffice/base.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
    {% if session.user == false or session.user == null %}
        <div class="container text-center text-sm-start">
            <div class="row mt-4">
                {% for flash in flashes.error %}
                    <h2 class="fs-5 text-danger text-center">{{ flash }}</h2>
                {% endfor %}
            </div>
            <h2>Connexion</h2>
            <p>Se connecter pour accéder à votre espace personnel.</p>
            <form action='' method="POST" class="form-group">
                <div class="row">
                    <div class="col-10 offset-1 col-sm-3 my-2">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" pattern="[A-Za-z0-9](([_\.\-]?[a-zA-Z0-9]+)*)@([A-Za-z0-9]+)(([_\.\-]?[a-zA-Z0-9]+)*)\.([A-Za-z]{2,})" name="email" class="form-control" required>
                    </div>
                    <div class="col-10 offset-1 col-sm-3 my-2">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" id="password" pattern="[A-Za-z0-9-!._]" name="password" class="form-control" required>
                    </div>
                </div>
                <div>
                    <input id="token" name="token" type="hidden" value="{{ session.token }}" />
                </div>
                <div class="row">
                    <div class="col-10 offset-1 col-sm-3 my-2">
                        <input type="submit" value="Se connecter" class="btn btn-primary form-control">
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
{% endblock %}