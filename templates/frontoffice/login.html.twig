{% extends "/frontoffice/base.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
    {% if session.user == false %}
        <div class="container">
            {% for flash in flashes.error %}
                <h2 class="fs-5 text-danger text-center">{{ flash }}</h2>
            {% endfor %}
            <h2>Connexion</h2>
            <p>Se connecter pour accéder à votre espace personnel.</p>
            <form action='' method="POST" class="form-group">
                <div class="row">
                    <div class="col-8 col-sm-3 my-2">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" id="email" name="email" class="form-control">
                    </div>
                    <div class="col-8 col-sm-3 my-2">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-8 col-sm-3 my-2">
                        <input type="submit" value="Se connecter" class="btn btn-primary form-control">
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
{% endblock %}